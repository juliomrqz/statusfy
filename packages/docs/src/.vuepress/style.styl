.hero
  img
    max-width 100%
    height auto
    max-height: 200px !important

.page .content p img
  max-width 100%
  height auto
  overflow hidden
  border 1px solid #e1e4e8
  border-radius 5px

.sidebar
  background-color #fafbfc !important

.img-container
.text-center
  text-align: center

.btn
  color #fff
  border 1px solid #0366d6
  background-color #0366d6
  display inline-block
  padding .75rem 1.5rem
  line-height 1
  border-radius .25rem
  white-space nowrap
  font-size 1.125rem
  cursor pointer

  &:hover
    color #f6f8fa
    border-color #005cc5
    background-color #005cc5

.btn-sm
  padding .5rem 1rem
  font-size 1rem

.btn-outline
  color #005cc5
  border-color #005cc5
  border-width 2px
  background-color transparent
  opacity .75

  &:hover
    color #005cc5
    opacity 1
    background-color transparent
